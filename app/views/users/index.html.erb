<div class="box">
  <div class="body">
    <h1>Lista de tutores</h1>
    <div class="media">
      <div class="search-bar">
          <%= form_tag(users_path, method: :get) do %>
            <%= text_field_tag :search,"",:class=>"searchTerm",:placeholder=>"Busqueda" %>
            <%= button_tag type: 'submit', class: "button" do %>
              Buscar <i class="fa fa-search"></i>
          <% end %>
          <% end %>
        </div>
        <%= form_tag destroy_multiple_users_path, method: :delete do %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Usuario</th>
              <th>Password</th>
              <th>Nombre</th>
              <th>Apellido materno</th>
              <th>Apellido paterno</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.usuario %></td>
                <td><%= user.password %></td>
                <td><%= user.nombre %></td>
                <td><%= user.apellido_materno %></td>
                <td><%= user.apellido_paterno %></td>
                <td><%= user.email %></td>

                <td>
                  <%= link_to user do %>
                    <i class="btn fas fa-eye fa-sm text-primary" aria-hidden="true"></i>
                  <%end%>
                </td>
                <td>
                  <%= link_to edit_user_path(user) do %>
                    <i class="btn fas fa-edit fa-sm text-primary" aria-hidden="true"></i>
                  <%end%>
                </td>

                <td>
                  <%= link_to user, method: :delete, data: { confirm: 'Esta Seguro?' } do%>
                    <i class="btn fa fa-trash-alt fa-sm text-danger" aria-hidden="true"></i>
                  <%end%>
                </td>

                <td><%= check_box_tag "user_ids[]", user.id, false, class: 'selectable' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= submit_tag "Delete selected", :class => 'buttond red' %>

        <%= link_to destroy_all_users_path,  method: :delete, :class => "buttond", data: { confirm: 'Esta Seguro?' } do %>
        Borrar Todos
          <% end %>
        <% end %>
    </div>

    <br>

    <%= link_to new_user_path, :class => "button" do %>
      Crear tutor <i class="fa fa-plus"></i>
    <% end %>

    <%= link_to users_path(format: :csv), :class => "button" do %>
      Descargar CSV <i class="fa fa-file-csv"></i>
      <% end %>

    <h3>Importar CSV</h3>
    <%= form_tag import_users_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= button_tag type: 'submit', class: "button" do %>
              Subir CSV <i class="fa fa-file-import"></i>
          <% end %>
    <% end %>

  </div>
</div>
