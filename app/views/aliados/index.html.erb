<div class="box">
  <div class="body">
    <h1>Lista de aliados</h1>
    <div class="media">
      <div class="search-bar">
          <%= form_tag(aliados_path, method: :get) do %>
            <%= text_field_tag :search %>
            <%= select_tag :rol,"<option>Todos</option><option>A</option><option>B</option>".html_safe %>
            <%= button_tag type: 'submit', class: "button" do %>
              Buscar <i class="fa fa-search"></i>
          <% end %>
          <% end %>
        </div>

      <%= form_tag destroy_multiple_aliados_path, method: :delete do %>
      <table class="table table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Tipo socio</th>
              <th>Correo</th>
              <th>Contacto</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @aliados.each do |aliado| %>
              <tr>
                <td><%= aliado.nombre %></td>
                <td><%= aliado.tipo_socio %></td>
                <td><%= aliado.correo %></td>
                <td><%= aliado.contacto %></td>
                <td>
                  <%= link_to aliado do %>
                  <i class="btn fas fa-eye fa-sm text-primary" aria-hidden="true"></i>
                  <%end%>
                </td>
                <% if current_user.admin %>
                <td>
                  <%= link_to edit_aliado_path(aliado) do %>
                  <i class="btn fas fa-edit fa-sm text-primary" aria-hidden="true"></i>
                  <%end%>
                </td>
                <td>
                  <%= link_to aliado, method: :delete, data: { confirm: 'Esta Seguro?' } do%>
                  <i class="btn fa fa-trash-alt fa-sm text-danger" aria-hidden="true"></i>
                  <%end%>
                </td>
                <td><%= check_box_tag "aliado_ids[]", aliado.id, false, class: 'selectable' %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
      </table>
      <% if current_user.admin %>
        <%= submit_tag "Delete selected", :class => 'button red' %>
        <% end %>
      <% end %>

    </div>

    <br>
    <% if current_user.admin %>

      <%= link_to new_aliado_path, :class => "button" do %>
      Crear aliado <i class="fa fa-plus"></i>
      <% end %>

      <%= link_to aliados_path(format: :csv), :class => "button" do %>
        Descargar CSV <i class="fa fa-file-csv"></i>
        <% end %>

      <h3>Importar CSV</h3>
      <%= form_tag import_aliados_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= button_tag type: 'submit', class: "button" do %>
                Subir CSV <i class="fa fa-file-import"></i>
            <% end %>
      <% end %>
    <% end %>

  </div>
</div>