<!--p id="notice"><%= notice %></p-->
<div class="box">
	<div class="body">
		<h1>Lista de preinscritos</h1>
		<div class="media">
			<div class="search-bar">
		      <%= form_tag(preinscritos_path, method: :get) do %>
		        <%= text_field_tag :search,"",:class=>"searchTerm",:placeholder=>"Busqueda" %>
		        <%= select_tag :rol,"<option>Todos</option><option>A</option><option>B</option>".html_safe %>
		        <%= button_tag type: 'submit', class: "button" do %>
        			<i class="fa fa-search">Buscar</i>
    			<% end %>
		      <% end %>
		    </div>
				<%= form_tag destroy_multiple_preinscritos_path, method: :delete do %>
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Nombre</th>
							<th>Apellido paterno</th>
							<th>Apellido materno</th>
							<th>Correo contacto</th>
							<th>Fecha inscripcion</th>
							<th>Id organizacion</th>
							<th>Rol</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<% @preinscritos.each do |preinscrito| %>
							<tr>
								<td><%= preinscrito.nombre %></td>
								<td><%= preinscrito.apellido_paterno %></td>
								<td><%= preinscrito.apellido_materno %></td>
								<td><%= preinscrito.correo_contacto %></td>
								<td><%= preinscrito.fecha_inscripcion %></td>
								<td><%= preinscrito.id_organizacion %></td>
								<td><%= preinscrito.rol %></td>
								<td>
								<%= link_to preinscrito do %>
      				<i class="btn fas fa-eye fa-sm text-primary" aria-hidden="true"></i>
    				<%end%>
    				</td>
    				<td>
    					<%= link_to edit_preinscrito_path(preinscrito) do %>
      					<i class="btn fas fa-edit fa-sm text-primary" aria-hidden="true"></i>
    					<%end%>
  					</td>
  					<td>
   						<%= link_to preinscrito, method: :delete, data: { confirm: 'Esta Seguro?' } do%>
      					<i class="btn fa fa-trash-alt fa-sm text-danger" aria-hidden="true"></i>
    					<%end%>
 						</td>
								<td><%= check_box_tag "preinscrito_ids[]", preinscrito.id, false, class: 'selectable' %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= submit_tag "Delete selected", :class => 'button red' %>
				<% end %>
		</div>

		<br>
		<%= link_to 'New Preinscrito', new_preinscrito_path, :class => "button" %>
		<%= link_to 'Download CSV list', preinscritos_path(format: :csv), :class => "button"  %>

		<h3>Importar CSV</h3>
		<%= form_tag import_preinscritos_path, multipart: true do %>
			<%= file_field_tag :file %>
			<%= submit_tag "Upload Preinscritos" , :class => "button" %>
		<% end %>

	</div>
</div>


