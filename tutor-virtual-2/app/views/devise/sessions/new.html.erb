<body class="text-center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%= image_tag "logo-simbolo.png", :id => "main-logo", class: "mb-4" %>


    <%= f.label :email, class: "sr-only"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Correo Electrónico", required: true %>

    <%= f.label :password, class: "sr-only"%>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Contraseña", required: true %>


    <% if devise_mapping.rememberable? %>
      <div class="field checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recuerdame", id: "lb-recuerdame"%>
      </div>
    <% end %>


    <%= f.submit "Iniciar Sesión",class: "btn btn-lg btn-primary btn-block", id: "btn-inicio-sesion" %>
  <% end %>

</body>
